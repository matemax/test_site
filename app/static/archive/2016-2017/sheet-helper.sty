\newcommand\ifnonempty[2]{\ifthenelse{\equal{#1}{}}{}{#2}}

\newcommand\optcomment[2]{#1\ifnonempty{#2}{ (#2)}}

\newcounter{sheet}
\newcommand{\sheet}[3]{%
